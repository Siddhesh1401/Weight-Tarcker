# MongoDB Atlas Connection String
# Replace <username>, <password>, and <cluster-url> with your actual credentials
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/weight_tracker?retryWrites=true&w=majority

# Server Port
PORT=5000

# Default User ID (for testing without authentication)
DEFAULT_USER_ID=user_001

# Email Configuration (Gmail SMTP - Free)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Weight Tracker <your-email@gmail.com>

# Cron Job API Key (for your cron service)
CRON_API_KEY=your-cron-api-key

# Cron Job Service Configuration (cron-job.org)
CRON_JOB_ORG_API_KEY=your-cron-job-org-api-key
CRON_JOB_ORG_EMAIL=your-email@gmail.com
